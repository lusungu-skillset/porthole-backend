{
  "name": "pothole-backend",
  "version": "1.0.0",
  "description": "Pothole Reporter backend (NestJS + TypeORM + MySQL)",
  "main": "dist/main.js",
  "scripts": {
    "start": "node dist/main.js",
    "start:dev": "ts-node-dev --respawn --transpile-only src/main.ts",
    "start:seed": "ts-node-dev src/seed.ts",
    "build": "tsc -p tsconfig.build.json",
    "start:prod": "node dist/main.js",
    "seed": "ts-node-dev src/seed.ts"
  },
  "dependencies": {
    "@nestjs/common": "^10.0.0",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^10.0.0",
    "@nestjs/jwt": "^11.0.2",
    "@nestjs/platform-express": "^10.0.0",
    "@nestjs/typeorm": "^10.0.0",
    "bcrypt": "^6.0.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "dotenv": "^16.6.1",
    "mysql2": "^3.3.0",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "pg": "^8.11.0",
    "reflect-metadata": "^0.1.14",
    "rxjs": "^7.8.0",
    "typeorm": "^0.3.27"
  },
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/express": "^5.0.6",
    "@types/multer": "^1.4.13",
    "@types/node": "^20.19.25",
    "@types/passport-jwt": "^4.0.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.5.6"
  }
}
